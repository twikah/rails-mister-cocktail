<h1 class="header-styled">Cocktails</h1>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.3)), url(https://source.unsplash.com/collection/1990254)">
      <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-title" %>
    </div>
  <% end %>
</div>
